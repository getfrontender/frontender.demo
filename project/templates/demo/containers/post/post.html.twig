{% import "macros/template.html.twig" as helper %}

<!--
    Note: To show a background image, set the "data-bg" attribute below
    to the url of your image.
-->

<{{ config.container_tag|default('section') }} {{ helper.class_attribute(config, ['']|join('  |  ')|trim)|raw }} data-bg="{{ model.urls.raw }}&fit=crop?crop=faces&w=1480&q=80" {{ helper.container_id_attribute(frontender, 'frontender')|raw }}>
    <div class="inner">
        <article class="box">
            {% if content.title|t %}
                <header>
                    <h1>{{ content.title|t }}</h1>
                    <p>{{ content.date|t }}</p>
                </header>
            {% endif %}

            {% if content.body|t %}
                <div class="content">
                    {{ content.body|t|markdown|raw }}
                </div>
            {% endif %}

            {% if content.button.label|t %}
                <footer>
                    <a href="{{ content.button.page|t }}" class="button alt">{{ content.button.label|t }}</a>
                </footer>
            {% endif %}
        </article>
    </div>
</{{ config.container_tag|default('section') }}>
