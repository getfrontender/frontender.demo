<!--
    Note: To show a background image, set the "data-bg" attribute below
    to the url of your image. This is used to set the background image.
-->

{% import "macros/template.html.twig" as helper %}

<{{ config.container_tag|default('section') }} id="banner" data-bg="{{ model.urls.regular }}" class="{{[config.container_class]|join('  |  ') }}" {{ helper.container_id_attribute(frontender, 'frontender')|raw }}>
    {% if content.title|t(locales) %}
        <div class="inner">
            <header>
                <h1>{{ content.title|t(locales) }}</h1>
            </header>
        </div>
    {% endif %}
</{{ config.container_tag|default('section') }}>
