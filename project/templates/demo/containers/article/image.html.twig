{% import "macros/template.html.twig" as helper %}

<{{ config.container_tag|default('div') }} {{ helper.class_attribute(config, ['']|join('  |  ')|trim)|raw }} {{ helper.frontender_id_attribute(frontender, 'frontender')|raw }}>
    <div class="clearfix">
        {% if model.urls.regular %}
            <span class="image {{ config.image_alignment }}">
                <img src="{{ model.urls.raw }}&fit=crop?crop=faces&w=750&q=80" alt="{{ model.description }}">
            </span>
        {% endif %}
        {% if content.title|t %}
            <h2>{{ content.title|t }}</h2>
        {% endif %}
        {% if content.body|t %}
            {{ content.body|t|markdown|raw }}
        {% endif %}
    </div>
</{{ config.container_tag|default('div') }}>
