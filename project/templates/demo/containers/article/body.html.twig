{% import "macros/template.html.twig" as helper %}

<{{ config.container_tag|default('article') }} {{ helper.class_attribute(config, ['']|join('  |  ')|trim)|raw }} id="article" {{ helper.container_id_attribute(frontender, 'frontender')|raw }}>
    {% if content.title|t %}
        <h2>{{ content.title|t }}</h2>
    {% endif %}
    {% if content.standfirst|t %}
        <p>{{ content.standfirst|t }}</p>
    {% endif %}

    <div class="row">
        {% for article in content.body|slice(0,2) %}
            <div class="6u 12u$(small)">
                {% if article.title|t %}
                    <h3>{{ article.title|t }}</h3>
                {% endif %}
                {% if article.body|t %}
                    <p>{{ article.body|t }}</p>
                {% endif %}
            </div>
        {% endfor %}
    </div>
    <div class="row">
        {# Strip first 2 articles for different layout style #}
        {% for article in content.body|slice(2) %}
            <div class="4u 12u$(medium)">
                {% if article.title|t %}
                    <h3>{{ article.title|t }}</h3>
                {% endif %}
                {% if article.body|t %}
                    <p>{{ article.body|t }}</p>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</{{ config.container_tag|default('article') }}>
