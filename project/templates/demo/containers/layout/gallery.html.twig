{% import "macros/template.html.twig" as helper %}
{% import "macros/unsplash.html.twig" as unsplash %}


<{{ config.container_tag|default('div') }} {{ helper.class_attribute(config, []|join('  |  ')|trim)|raw }} {{ helper.container_id_attribute(frontender, 'frontender')|raw }}>

    {% if content.title|t %}
        <h2>{{ content.title|t }}</h2>
    {% endif %}
    <div class="row 50% uniform">
        {% for item in model %}
            <div class="4u 12u$(small) 6u(medium)">
                <span class="image fit"><img src="{{ unsplash.crop(item, {w: 640, h: 480}) }}" alt="{{ item.description }}"></span>
                {% if item.description %}
                    <em>{{ item.description }}</em>
                {% endif %}
                <p>By: {{ item.user.name }}</p>
            </div>
        {% endfor %}
    </div>

</{{ config.container_tag|default('div') }}>
