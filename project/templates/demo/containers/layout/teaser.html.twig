{% import "macros/template.html.twig" as helper %}

<{{ config.container_tag|default("div") }}
 {{ helper.class_attribute(config, []|join(" ")|trim)|raw }}
 {{ helper.frontender_id_attribute(frontender, "frontender")|raw }}>
    {% if content.title|t and content.catchphrase|t %}
        <header>
            <h1>{{ content.title|t }}</h1>
            <p>{{ content.catchphrase|t }}</p>
        </header>
    {% else %}
    <div class="header">
        {% if content.title|t %}
            <h1>{{ content.title|t }}</h1>
        {% endif %}
        {% if content.catchphrase|t %}
            <p>{{ content.catchphrase|t }}</p>
        {% endif %}
    </div>
    {% endif %}
    {% if content.body|t %}
        <div class="content">
            {{ content.body|t|markdown|raw }}
        </div>
    {% endif %}
    {% if link.page|t %}
        <footer>
            <a href="{{ link.page|t }}" class="button alt">{{ link.label|default({"en-GB": "Read more"})|t }}</a>
        </footer>
    {% endif %}
</{{ config.container_tag|default("div") }}>