{% import "macros/template.html.twig" as helper %}
{% import "macros/unsplash.html.twig" as unsplash %}

{#
    Description:

    Full width container for texts. Contains a nested container for bodies of texts.

    Variations:

    With background image
    Without background image

    Template configurations:
    
    post: true|false (only for background image variant)
    width: "inner"|"container"
    style: none|style1|style2

    Placement: fullwidth
    Allow placement: box

#}
<{{ config.container_tag|default("div") }}
    {{ helper.class_attribute(config, ["wrapper","post", config.overlay ]|join(" ")|trim)|raw }}
    {{ helper.id_attribute(config)|raw }}
    {% if content.show_bg|default(1) and model.urls.raw %}data-bg="{{ unsplash.crop(model, {w: 1480, h: 0}) }}"{% endif %}
    {{ helper.frontender_id_attribute(frontender, "frontender")|raw }}>
    <div class="{{ ["inner", config.width, config.alignment]|join(" ") }}">
        <div class="box">
            {% for container in containers %}
                {% include container.template with container %}
            {% endfor %}
        </div>
    </div>
    {% include "demo/partials/unsplash-credit.html.twig" %}
</{{ config.container_tag|default("div") }}>